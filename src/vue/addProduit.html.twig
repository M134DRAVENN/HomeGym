{% extends "base.html.twig" %}

{% block title %} {{ parent() }}{% endblock %}

{% block contenu %}
    <form class="form-signin" action="index.php?page=AddProduit" method="post" enctype="multipart/form-data">
        <h1 class="h3 mb-3 font-weight-normal">Ajouter un produit</h1>
        <div class="form-group">
            <label for="inputDesignation">Titre :</label>
            <input type="text" id="inputDesignation" name="inputDesignation" class="form-control" placeholder="Renseignez un titre" required autofocus>
        </div>
        <div class="champ">
            <label for="inputDescription">Description :</label>
            <textarea id="inputDescription" name="inputDescription" class="form-control" placeholder="Description du produit" rows="5" required autofocus></textarea>
        </div>
        <div class="champ">
            <label for="inputPrix">Prix :</label>
            <input type="number" id="inputPrix" name="inputPrix" class="form-control" placeholder="Prix du produit" required autofocus>
        </div>
        <div class="champ">
            <label for="inputType">Type :</label>
            <input type="number" name="idType" id="idType" class="form-control" placeholder="Type de produit" required autofocus>
        </div>
        <div class="form-group">
            <label for="photo">Photo :</label>
            <input type="file" name="photo" id="photo" class="form-control"/>
        </div><br>
        <button class="btn btn-lg btn-block" type="submit" name="btAjouter">Ajouter</button>
    </form>
{% endblock %}