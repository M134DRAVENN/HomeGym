{% extends "base.html.twig" %}
{% block title %} {{ parent() }}{% endblock %}
{% block contenu %}

{% if form.etat is defined %}
 {% if form.etat == true %}
 <h1 class="h3 mb-3 font-weight-normal">Suppression reussie</h1>
 {% else %}
 <h1 class="alert alert-danger" role="alert">Probleme d'insertion</h1>
 {% endif %}
{% endif %}

<form class="form-signin" action="index.php?page=utilisateur" method="post" enctype="application/x-www-form-urlencoded">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Email</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Prénom</th>
                    <th scope="col">Rôle</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for u in liste %}
                    <tr>
                        <td>{{u.email}}</td>
                        <td>{{u.nom}}</td>
                        <td>{{u.prenom}}</td>
                        <td>{{u.libellerole}}</td>
                        <td><a href="index.php?page=utilisateurModif&id={{u.id}}">Modifier</a></td>
                        <td><a href="index.php?page=utilisateur&id={{u.id}}">Supprimer</a></td>
                        <td><input type="checkbox" name="cocher[]" id="cocher[]" value="{{u.id}}" /></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <button class="btn btn-lg btn-block" type="submit" name="btSupprimer">Supprimer</button>
    </div>
</form>
{% endblock %}